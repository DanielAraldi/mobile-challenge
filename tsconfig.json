{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ESNext"],
    "rootDir": "./src",
  },
  "exclude": ["node_modules", "android", "ios", "bundle"],
  "include": ["./src"]
}
